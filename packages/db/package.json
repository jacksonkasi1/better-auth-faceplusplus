    "db:migrate": "bunx --bun drizzle-kit migrate"
  },
  "dependencies": {
    "@neondatabase/serverless": "^0.10.4",
    "drizzle-orm": "^0.38.4"
  },
  "devDependencies": {
    "@repo/typescript-config": "workspace:*",
    "@types/node": "^22",
    "drizzle-kit": "^0.30.4",
    "typescript": "^5.9.2"
  }
}
