{
  "name": "@repo/db",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "types": "./src/index.ts"
    }
  },
  "scripts": {
    "build": "bunx --bun tsc",
    "check-types": "bunx --bun tsc --noEmit",
