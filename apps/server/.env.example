# Hono server port.
PORT=8080

# Better Auth server URL (this backend).
BETTER_AUTH_URL=http://localhost:8080

# Better Auth secret (minimum 32 chars).
BETTER_AUTH_SECRET=replace-with-at-least-32-characters-long-secret

# Frontend URL allowed for auth callbacks/CORS.
FRONTEND_URL=http://localhost:3000

# Postgres connection string.
DATABASE_URL=postgresql://user:password@host:5432/dbname

# Allowed browser origins for CORS (comma-separated if multiple).
ALLOWED_ORIGINS=http://localhost:3000

# Face++ API credentials.
FACEPP_API_KEY=your_facepp_api_key
FACEPP_API_SECRET=your_facepp_api_secret

# Face++ API base URL (US by default).
FACEPP_BASE_URL=https://api-us.faceplusplus.com

# Minimum confidence score to accept a match.
FACEPP_CONFIDENCE_THRESHOLD=80

# FaceSet ID used to store enrolled faces.
FACEPP_FACESET_ID=better-auth-face-example

# Auth mode at backend:
# true  => require email with face auth
# false => face-only mode
FACEPP_REQUIRE_EMAIL=false
